    if(@Result = 0)    
    begin
        if( @isPrinting = 1)
        begin
            print char(13) + '------ Re-creating metadata dependent AccountPoolCert index(es) ------'
        end

		if exists (select 1 from sys.sysindexes where name = 'APC_AcountGroupId_CertEnabled')
